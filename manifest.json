{
  "manifest_version": 2,

  "name": "Block facebook",
  "description": "Close Facebook and open your book!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "background":{
    "scripts": ["popup.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "storage"
  ]
}